{
  "name": "se-mcn-backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "npm run build && npx pm2 start ./dist/server.js --name se-mcn-backend",
    "dev": "npx tsx watch --include \"./src/**/*\" --include \".env\" ./src/server.ts",
    "fmt": "npx prettier --write ./src/**/*.{js,ts,jsx,tsx}",
    "test": "jest --config jest.config.js"
  },
  "type": "commonjs",
  "dependencies": {
    "@vercel/node": "^5.1.14",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.1",
    "morgan": "^1.10.0",
    "pm2": "6.0.5",
    "supertest": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "ts-jest": "^29.3.1",
    "tsx": "4.19.3",
    "typescript": "^5.8.2"
  }
}
